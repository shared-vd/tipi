<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

    <bean class="ch.vd.registre.tipi.client.AnnotationActivityRegistrar">
        <property name="aPackage" value="ch.vd.registre.tipi.batch"/>
    </bean>

    <bean id="batchScheduler" class="ch.vd.registre.tipi.batch.TipiBatchScheduler"/>
    <bean id="tipiRegistry" class="ch.vd.registre.tipi.engine.TipiRegistry"/>

</beans>
